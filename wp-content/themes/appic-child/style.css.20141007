@media (max-width: 767px) {
	ul#navigation > li > a, .menu ul > li > a{
		color: #fff;
		padding: 20px 15px 28px;
	}
	ul#navigation{
		none repeat scroll 0 0 rgba(33, 44, 67, 0.9);
	}
	#navigation-toggle{
		top: 0;
		right: 20px;
	}

}

